{
  "name": "rvu",
  "version": "0.5.1",
  "description": "Vue-like React state management",
  "author": "Ethan Gregory Clark <ethangclark@gmail.com>",
  "repository": "https://github.com/8balloon/rvu",
  "license": "MIT",
  "keywords": [
    "react",
    "vue",
    "state",
    "typescript",
    "materialize",
    "reactive"
  ],
  "source": "./src/main.ts",
  "module": "./dist/tsc/main.js",
  "main": "./dist/tsc/main.js",
  "types": "./dist/tsc/main.d.ts",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:debug:note": "see https://jestjs.io/docs/troubleshooting",
    "clean": "rm -rf dist build package",
    "ts-node": "ts-node",
    "docs": "typedoc --entryPoints src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build-all": "yarn clean && yarn build && yarn esbuild-browser",
    "esbuild-browser": "esbuild src/browser.tsx --bundle --minify --sourcemap --outfile=dist/esbuild/browser.js",
    "dev": "esbuild src/browser.tsx --bundle --sourcemap --watch --outfile=dist/esbuild/browser.js"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "esbuild": "^0.11.11",
    "eslint": "^7.22.0",
    "jest": "^27.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^9.1.1",
    "typedoc": "^0.22.11",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "mobx": "^6.3.10",
    "mobx-react-lite": "^3.2.2",
    "mobx-utils": "^6.0.4",
    "redux": "^4.1.2",
    "type-fest": "^2.8.0"
  }
}
